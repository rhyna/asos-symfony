{% extends '/admin/base.html.twig' %}

{% block title %}ASOS Admin | {{ title }}{% endblock %}

{% block body %}
    <a href="{{ path('admin.brand.add.form') }}" class="add-entity">Add brand</a>
    <h1 class="entity-list-title">Brands</h1>
    <div class="entity-list entity-list--brand">
        <div class="entity-list-header">
            <div class="row">
                <div class="col">Title</div>
                <div class="col-1"></div>
            </div>
        </div>
        <div class="entity-list-content">
            {% for brand in brands %}
                <div class="entity-list-item__wrapper">
                    <div class="entity-list-item">
                        <div class="row entity-list-item__row">
                            <div class="col">
                                <a href="{{ path('admin.banner.edit.form', {
                                    id: brand.id
                                }) }}">
                                    {{ brand.title }}
                                </a>
                            </div>
                            <div class="col-1 entity-list-item-icons">
                                <div class="entity-list-item-icons__inner">
                                    <a href="{{ path('admin.banner.edit.form', {
                                        id: brand.id
                                    }) }}">
                                        <i class="far fa-edit"></i>
                                    </a>
                                    {# <button type="button" data-toggle="modal" #}
                                    {# data-target="#deleteEntity" #}
                                    {# onclick="passEntityId(<?= $brand->id ?>)"> #}
                                    {# <i class="far fa-trash-alt"></i> #}
                                    {# </button> #}
                                    <button type="button">
                                        <i class="far fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
